<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3mm">

        <TextView style="@style/item" android:text="@string/server_address"/>
        <EditText style="@style/item" android:id="@+id/server_address"/>

        <TextView style="@style/item" android:text="Rndz Server Address:"/>
        <EditText style="@style/item" android:id="@+id/rndz_server_address"/>

        <TextView style="@style/item" android:text="Rndz Remote Id:"/>
        <EditText style="@style/item" android:id="@+id/rndz_remote_id"/>

        <TextView style="@style/item" android:text="Rndz Local Id:"/>
        <EditText style="@style/item" android:id="@+id/rndz_local_id"/>

        <TextView style="@style/item" android:text="Cipher:"/>
        <EditText style="@style/item" android:id="@+id/cipher"/>

        <TextView style="@style/item" android:text="@string/secret"/>
        <EditText style="@style/item" android:id="@+id/secret" android:inputType="textPassword"/>

        <TextView style="@style/item" android:text="Local IPv4:"/>
        <EditText style="@style/item" android:id="@+id/local_ipv4"/>

        <TextView style="@style/item" android:text="Local IPv6:"/>
        <EditText style="@style/item" android:id="@+id/local_ipv6"/>

        <TextView style="@style/item" android:text="Routes:"/>
        <EditText style="@style/item" android:id="@+id/routes"/>

        <TextView style="@style/item" android:text="NameServers:"/>
        <EditText style="@style/item" android:id="@+id/dns"/>

        <Button style="@style/item" android:id="@+id/connect" android:text="@string/connect"/>
        <Button style="@style/item" android:id="@+id/disconnect" android:text="@string/disconnect"/>
        <Button style="@style/item" android:id="@+id/status" android:text="Status"/>

    </LinearLayout>
</ScrollView>
